@model List<RolesModel>
@{
    var rID = ViewData["rID"];
}
@{
    <form method="post" class="form-control" asp-action="EditUserRole">
        <table class="table table-responsive">
            <h1 class="modal-title">Update Users Role</h1>
            <tr>
                <th> Role </th>
                <th>Assigned</th>
            </tr>


            @for (int i = 0; i < @Model.Count(); i++)
            {
                <tr>
                    <td>
                        @Model[i].rName
                    </td>
                    <td>
                        <input asp-for="@Model[i].Name" type="hidden" />
                        <input asp-for="@Model[i].Id" type="hidden" />
                        <input asp-for="@Model[i].rId" type="hidden" />
                        <input asp-for="@Model[i].rName" type="hidden" />
                        <input class="form-check-input" asp-for="@Model[i].IsSelected" type="checkbox" />
                    </td>
                </tr>
            }
        </table>
        <button type="button"  class="btn btn-secondary btn-sm"><a class="text-decoration-none" style="color: white;" asp-action="EditUser" asp-route-id="@rID">Cancel</a></button>
        <button class="btn btn-primary btn-sm" type="submit">Save changes</button>
    </form>
}
