@using BHFunctioning.Data
@model EditRoleModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <form method="post" asp-action="EditRole" class="form-check col-5 form-control align-items-center" >
        <div class="mt-3 col-4">
            <div class="modal-header">
                <h4 class="modal-title" id="addRoleLable">Edit role</h4>
            </div>
            <div class="form-group row">
                <label asp-for="Id" class="col-form-label col-2"></label>
                <input asp-for="Id" disabled class="form-control col-9 p-1 text-center" style="font-size: 0.9em" />
            </div>
            <div class="form-group row">
                <label asp-for="Name" class="col-form-label col-2"></label>
                <input asp-for="Name" class="form-control col-9 p-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div role="group" class="btn-group p-2">
                <button type="button" class="btn btn-secondary"><a class="text-decoration-none" style="color: white;" asp-action="ListAllRoles">Back</a></button>
                <button type="submit" class="btn btn-primary fw-bold">Update</button>

            </div>
        </div>

        <div class="col-5">
            <h3>@Model.Name role users</h3>

            <table class="table table-striped col-8">
                <tr></tr>
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <tr>
                            <td class="form-label">@user</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="form-label">No users with @Model.Name role</td>
                    </tr>
                }
            </table>
            <div>
                <a asp-action="EditRoleUser" asp-route-id="@Model.Id" class="btn btn-primary">Assign/Remove users roles</a>
            </div>
        </div>

    </form>
}
