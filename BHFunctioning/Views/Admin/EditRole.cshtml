@model EditRoleModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <form method="post" class="form-check col-5 form-control align-items-center">
    <div class="mt-3 col-4">
        <div class="form-group row">
            <label asp-for="Id" class="col-form-label col-2"></label>
            <input asp-for="Id" disabled class="form-control col-9 p-1 text-center" style="font-size: 0.9em" />
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-form-label col-2"></label>
            <input asp-for="Name" class="form-control col-9 p-2" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        @*<div asp-validation-summary="All" class="text-danger"></div>*@

        <div class="form-group">
            <div class="btn-toolbar p-2">
                <button type="button"  class="btn btn-secondary col-2"><a class="text-decoration-none" style="color: white;" asp-action="ListAllRoles">Cancel</a></button>
                <button type="submit" class="btn btn-primary col-2">Edit</button>
            </div>
        </div>
    </div>
        <div class="form-check col-5">
            <div class="modal-header">
                <h4 class="modal-title" id="addRoleLable">Add role</h4>
            </div>
            <label asp-for="Name"></label>
            <input asp-for="Name" name="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
            
        </div>
    </form>
}
