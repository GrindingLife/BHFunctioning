@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "All users";
}

<h1>All users</h1>

<a class="btn btn-primary mb-2" asp-area="Identity" asp-page="/Account/Register"> Add user</a>

@if (Model.Any())
{
    <table class="table col-3">
        <thead>
            <tr>
                <td><h5>Users</h5></td>
                <td></td>
            </tr>
        </thead>
        @foreach (var user in Model)
        {
            <tbody>
                <tr>
                    <td>@user.UserName</td>
                    <td class="text-center">
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
}
else
{
    <h5>No roles</h5>
}